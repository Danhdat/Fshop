<!--Sản phẩm cùng thể loại-->
<script>
    $(document).ready(function () {
        var _productName = $('#headName').text();
        var trimPro = _productName.trim();
        var namePro = trimPro.slice(0,8);

        console.log(namePro);
        $.ajax({
            url: '@Url.Action("SameProduct", "Home")',
            data: { name: namePro },
            type: 'GET'
        })
            .done(function (data) {
                console.log('success');
                $('.slick2').html(data);
            })
            .fail(function (data) {
                console.log('fail');
            });
    });
</script>

<script>
    $('#btnAddToCart').off('click').on('click', function () {
        var productName = $(this).parent().parent().parent().parent().parent().find('#headName').html();
        var id = $(this).data('id');
        var size = $('.selection-2 option:selected').val();
        $.ajax({
            url: '@Url.Action("AddItem", "Cart")',
            data: {
                productID: id,
                Quantity: $('#quantity').val(),
                sizeID: size
            },
            type: 'POST'
        })
            .done(function () {
                swal(productName, "is added to cart !", "success");
                $.ajax({
                    url: '@Url.Action("HeaderIcon", "Home")',
                    type: 'GET'
                })
                    .done(function (data) {
                        $('#headericonBar').html(data);
                    });
            })
            .fail(function () {
                alert("Chọn size!");
            });
    });
</script>


