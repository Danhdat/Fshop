<h4 class="m-text14 p-b-32">
    Filters
</h4>

@using (Html.BeginForm("Product", "Product"))
{
    <div class="filter-price p-t-22 p-b-50 bo3">
        <div class="m-text15 p-b-17">
            Price
        </div>

        <div class="wra-filter-bar">
            <div id="filter-bar"></div>
        </div>

        <div class="flex-sb-m flex-w p-t-16">
            <div class="w-size11">
                <!-- Button -->
                <button class="flex-c-m size4 bg7 bo-rad-15 hov1 s-text14 trans-0-4" id="searchPrice" type="submit">
                    Filter
                </button>
            </div>

            <div class="s-text3 p-t-10 p-b-10">
                Range: VND<span id="value-lower">50000</span> - VND<span id="value-upper">1000000</span>
                <input type="hidden" name="value-min" id="value-min" />
                <input type="hidden" name="value-max" id="value-max" />
            </div>
        </div>
    </div>

}
<script type="text/javascript" src="~/Scripts/nouislider.min.js"></script>

<script type="text/javascript">
    /*[ No ui ]
    ===========================================================*/
    var filterBar = document.getElementById('filter-bar');

    noUiSlider.create(filterBar, {
        start: [50000, 1000000],
        connect: true,
        range: {
            'min': 50000,
            'max': 1000000
        }
    });

    var skipValues = [
        document.getElementById('value-lower'),
        document.getElementById('value-upper'),
        document.getElementById('value')
    ];

    var min;
    var max;

    filterBar.noUiSlider.on('update', function (values, handle) {
        skipValues[handle].innerHTML = Math.round(values[handle]);

        min = $('#value-lower').text();
        max = $('#value-upper').text();

        $('#value-min').val(min);
        $('#value-max').val(max);
    });

</script>